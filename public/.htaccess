RewriteEngine On

# 1) Ustaw indeks
DirectoryIndex index.php

# 1.5) Przekierowania 301 ze starych URL-i na nowe (SEO)
RewriteRule ^about/?$ /o-nas [R=301,L]
RewriteRule ^services/?$ /uslugi [R=301,L]
RewriteRule ^contact/?$ /kontakt [R=301,L]

# 2) Blokuj dostęp do wrażliwych rzeczy
<FilesMatch "^(\.env|composer\.(json|lock)|package(-lock)?\.json|vite\.config\.js|tailwind\.config\.js)$">
  Require all denied
</FilesMatch>

# Blokuj wejście do src/ i config/ przez WWW
RewriteRule ^(src|config)/ - [F,L]

# 3) Routing do front controllera (pozwól na istniejące pliki/katalogi)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# 4) Cache statycznych zasobów (dostosuj ścieżki jeśli inne)
<IfModule mod_expires.c>
  ExpiresActive On
  <Location "/build">
    ExpiresDefault "access plus 1 year"
  </Location>
  <Location "/assets">
    ExpiresDefault "access plus 30 days"
  </Location>
</IfModule>

# 5) Kompresja (jeśli dostępna)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>



# 7) Nagłówki bezpieczeństwa (opcjonalnie; dopasuj do swoich potrzeb)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>